<body>
  <!-- ---------------------navbar--------------------------- -->
  <nav class="navbar bg-white py-3">
    <div class="container">
      <a class="navbar-brand" href="http://hostaclass.com/">Hostaclass.com</a>
    </div>
  </nav>
  <!-- ------------------------page-content---------------------------- -->

  <section>
    <div class="row justify-content-center align-items-center">
      <div class="col-12 col-md-12 col-lg-7 col-xl-7 col-xxl-7 img-col p-0">
        <img src="/images/Assets/flower shop.jpg" alt="" class="w-100" />
      </div>
      <div
        class="col-12 col-md-12 col-lg-5 col-xl-5 col-xxl-5 px-3 px-md-5 px-lg-5 px-xl-5 px-xxl-5 h-100 form-col login-col">
        <h5 class="text-center mb-5 text-black">Login</h5>
        {{#if error}}
        <p class="fs-16 text-danger">{{error}}</p>
        {{/if}}
        <form id="login-form" action="/login" method="post">
          <div class="mb-4">
            <input type="email" class="form-control form-control-md" name="email" placeholder="Email Address"
              required />
          </div>
          <div class="mb-4">
            <input type="password" class="form-control form-control-md" name="password" placeholder="Password"
              required />
          </div>
          <div class="mb-4 form-check">
            <input type="checkbox" class="form-check-input" id="remember" name="remember"/>
            <label class="form-check-label" for="remember">Remember Me</label>
          </div>
          <div class="my-4 text-center"><a href="/reset-password">Forgot Email Address/ Password? </a></div>
          <div class="text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
        </form>
        <p class="text-center mt-3">Donâ€™t have an account? <a href="./packages" class="text-primary"><b> Sign Up
